.clearfix:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}
.coupon-item {
  margin: 0 24rpx;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.coupon-item > .coupon-pic {
  width: 260rpx;
  height: 260rpx;
  border-radius: 16rpx 0 0 16rpx;
  float: left;
}
.coupon-item > .coupon-info {
  width: 402rpx;
  margin-left: 284rpx;
  position: relative;
}
.coupon-item > .coupon-info > .coupon-title {
  height: 80rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #313134;
  line-height: 40rpx;
  overflow: hidden;
  margin-top: 8rpx;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.coupon-item > .coupon-info > .coupon-title > image {
  position: relative;
  top: 5rpx;
  margin-right: 6rpx;
}
.coupon-item > .coupon-info > .coupon-title > image.jd-icon {
  width: 52rpx;
  height: 30rpx;
}
.coupon-item > .coupon-info > .coupon-title > image.jdpg-icon,
.coupon-item > .coupon-info > .coupon-title > image .jdms-icon,
.coupon-item > .coupon-info > .coupon-title > image .kl-icon {
  width: 90rpx;
  height: 30rpx;
}
.coupon-item > .coupon-info > .coupon-title > image.pdd-icon {
  width: 64rpx;
  height: 30rpx;
}
.coupon-item > .coupon-info > .coupon-title > image.wph-icon {
  width: 86rpx;
  height: 30rpx;
}
.coupon-item > .coupon-info > .coupon-fee-group {
  margin-top: 62rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  min-height: 36rpx;
}
.coupon-item > .coupon-info > .coupon-fee-group > .fee-quan {
  padding: 0 8rpx;
  height: 36rpx;
  line-height: 36rpx;
  background: -webkit-linear-gradient(317deg, #ff6830 0%, #ff0801 100%);
  background: linear-gradient(133deg, #ff6830 0%, #ff0801 100%);
  border-radius: 7rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: relative;
  margin-right: 7rpx;
}
.coupon-item > .coupon-info > .coupon-fee-group > .fee-quan > .quan {
  width: 37rpx;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #ffffff;
}
.coupon-item > .coupon-info > .coupon-fee-group > .fee-quan > .quan-money {
  height: 36rpx;
  line-height: 36rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #ffffff;
}
.coupon-item > .coupon-info > .coupon-fee-group > .fee-quan::after {
  content: "";
  display: block;
  height: 36rpx;
  position: absolute;
  top: 0;
  left: 36rpx;
  border-left: 2rpx #fff dotted;
}
.coupon-item > .coupon-info > .coupon-price-area {
  margin-top: 24rpx;
  margin-left: -8rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.coupon-item > .coupon-info > .coupon-price-area > .final-price > .rmb {
  display: inline-block;
  width: 20rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: bold;
  color: #ff2220;
  line-height: 20rpx;
  position: relative;
  bottom: 2rpx;
}
.coupon-item > .coupon-info > .coupon-price-area > .final-price > .price {
  font-size: 34rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: bold;
  color: #ff2220;
  line-height: 34rpx;
  margin-left: 2rpx;
}
.coupon-item > .coupon-info > .coupon-price-area > .origin-price {
  height: 28rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #91919a;
  line-height: 28rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
.coupon-item > .coupon-info > .coupon-price-area > .origin-price > .price {
  text-decoration: line-through;
  max-width: 105rpx;
  overflow: hidden;
  white-space: nowrap;
}
.coupon-item > .coupon-info > .sale-num {
  position: absolute;
  right: 8rpx;
  bottom: 8rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #848d94;
}

